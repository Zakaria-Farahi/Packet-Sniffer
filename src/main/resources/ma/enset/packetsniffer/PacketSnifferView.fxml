<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ma.enset.packetsniffer.PacketSnifferController">
    <children>
        <TabPane fx:id="mainTabPane" VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <!-- Dashboard Tab -->
                <Tab text="Dashboard">
                    <content>
                        <VBox spacing="20">
                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>
                            <HBox spacing="20" alignment="CENTER_LEFT">
                                <!-- Quick Access Buttons -->
                                <Button fx:id="alertsButton" styleClass="dashboard-button" alignment="CENTER">
                                    <graphic>
                                        <VBox alignment="CENTER" spacing="5">
                                            <ImageView fitHeight="34.0" fitWidth="34.0" preserveRatio="true">
                                                <image>
                                                    <Image url="@assets/warning.png"/>
                                                </image>
                                            </ImageView>
                                            <Text text="Go To Alerts"/>
                                        </VBox>
                                    </graphic>
                                </Button>
                                <Button fx:id="snifferButton" styleClass="dashboard-button" alignment="CENTER">
                                    <graphic>
                                        <VBox alignment="CENTER" spacing="5">
                                            <ImageView fitHeight="34.0" fitWidth="34.0" preserveRatio="true">
                                                <image>
                                                    <Image url="@assets/organ.png"/>
                                                </image>
                                            </ImageView>
                                            <Text text="Go To Sniffer"/>
                                        </VBox>
                                    </graphic>
                                </Button>
                                <Button fx:id="activeUsersButton" styleClass="dashboard-button" alignment="CENTER">
                                    <graphic>
                                        <VBox alignment="CENTER" spacing="5">
                                            <ImageView fitHeight="34.0" fitWidth="34.0" preserveRatio="true">
                                                <image>
                                                    <Image url="@assets/multiple-users-silhouette.png"/>
                                                </image>
                                            </ImageView>
                                            <Text text="See Active Users"/>
                                        </VBox>
                                    </graphic>
                                </Button>
                            </HBox>

                            <VBox spacing="10" VBox.vgrow="ALWAYS">
                                <Label text="Number of malicious activity for the last 30 Days"
                                       styleClass="chart-title"/>
                                <StackedBarChart VBox.vgrow="ALWAYS">
                                    <xAxis>
                                        <CategoryAxis side="BOTTOM"/>
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis side="LEFT"/>
                                    </yAxis>
                                </StackedBarChart>
                            </VBox>
                        </VBox>
                    </content>
                </Tab>

                <!-- Sniffer Tab -->
                <Tab text="Sniffer">
                    <content>
                        <VBox spacing="10">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="Select Interface"/>
                                <ChoiceBox fx:id="interfaceChoiceBox" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                                <Button fx:id="startButton" text="Start" onAction="#startCapture"/>
                                <Button fx:id="stopButton" text="Stop" onAction="#stopCapture"/>
                            </HBox>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="Search"/>
                                <TextField fx:id="searchField" HBox.hgrow="ALWAYS"/>
                                <Button fx:id="searchButton" text="OK" onAction="#searchPackets"/>
                            </HBox>
                            <TableView fx:id="packetTableView" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colNumber" text="No." minWidth="50" maxWidth="70"/>
                                    <TableColumn fx:id="colTime" text="Time" minWidth="100"/>
                                    <TableColumn fx:id="colSrcIP" text="Source IP" minWidth="120"/>
                                    <TableColumn fx:id="colDstIP" text="Destination IP" minWidth="120"/>
                                    <TableColumn fx:id="colProtocol" text="Protocol" minWidth="80"/>
                                    <TableColumn fx:id="colLength" text="Length" minWidth="70"/>
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                </columnResizePolicy>
                            </TableView>
                        </VBox>
                    </content>
                </Tab>

                <!-- Active Users Tab -->
                <Tab text="Active Users">
                    <content>
                        <VBox spacing="10">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>
                            <Accordion VBox.vgrow="ALWAYS">
                                <panes>
                                    <TitledPane text="Users" expanded="true">
                                        <content>
                                            <TableView fx:id="activeUserTableView" VBox.vgrow="ALWAYS">
                                                <columns>
                                                    <TableColumn fx:id="colMacAddress" text="Mac Address" prefWidth="300"/>
                                                    <TableColumn fx:id="colIsActive" text="Is Active" prefWidth="150"/>
                                                </columns>
                                                <columnResizePolicy>
                                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                                </columnResizePolicy>
                                            </TableView>
                                        </content>
                                    </TitledPane>
                                    <TitledPane text="Black List">
                                        <content>
                                            <TableView VBox.vgrow="ALWAYS">
                                                <columns>
                                                    <TableColumn text="Mac Address" prefWidth="400"/>
                                                    <TableColumn text="UnBlock" prefWidth="200"/>
                                                </columns>
                                                <columnResizePolicy>
                                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                                </columnResizePolicy>
                                            </TableView>
                                        </content>
                                    </TitledPane>
                                </panes>
                            </Accordion>
                        </VBox>
                    </content>
                </Tab>

                <!-- Alerts Tab -->
                <Tab text="Alerts">
                    <content>
                        <VBox spacing="10">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>
                            <!-- Add your alerts content here -->
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>